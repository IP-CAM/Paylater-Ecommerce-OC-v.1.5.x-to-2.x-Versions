#!/usr/bin/env bash
set -e 
trap "exit" INT

source pki/app/.helper/common

echo ""
echo -e "Setup a cert Auth Method on a Vault cluster"
echo -e "To update the auth cert setup, just update the conf.yml file in" \
        "the auth/cert directory and re-run this command." | fold -w 80 -s

pkictl_run "vault.auth.cert.setup" --help