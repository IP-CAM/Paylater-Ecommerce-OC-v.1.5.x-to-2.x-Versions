#!/usr/bin/env bash
set -e
trap "exit" INT

function vault-secrets-kv-setup-validate {
    local clusterInventory=$1
    local blueprint=$2
    local inventoryFile=~/.host-inventory/inventory.d/${clusterInventory}
    local secretsBlueprintFile=./pki/blueprint/secrets/kv/${clusterInventory}/${blueprint}/conf.yml
    
    if [[ ! -f "${inventoryFile}" ]]; then
        echo -e "${RED}[ERROR]${NC} ${YELLOW}${clusterInventory}${NC} cluster inventory not found. Expected on: ${RED}[${inventoryFile}]${NC}"
        echo -e "Try to run ${YELLOW}./pkictl inventory setup${NC} to setup inventories needed for pkictl"
        exit 1
    fi
    
    if [[ ! -f "${secretsBlueprintFile}" ]]; then
        echo -e "${RED}[ERROR]${NC} ${YELLOW}${secretsBlueprintFile}${NC} KV secrets blueprint file not found. Expected on: ${RED}[${secretsBlueprintFile}]${NC}"
        exit 1
    fi
}

function vault-secrets-kv-setup-execute {
    local clusterInventory=$1
    local blueprint=$2
    local inventoryFile=~/.host-inventory/inventory.d/${clusterInventory}
    local currentDirectory=$(pwd)
    local secretsBlueprintFile=${currentDirectory}/pki/blueprint/secrets/kv/${clusterInventory}/${blueprint}/conf.yml

    if [[ "${clusterInventory}" == "local" ]]; then
        echo -ne "${GREEN}[PKICTL]${NC} "
        $ANSIBLE_PLAYBOOK pki/playbook/pki-vault-kv-setup.yml \
            -i ${inventoryFile} \
            -e "cluster=${clusterInventory}" \
            -e "blueprint=${blueprint}" \
            -e "blueprint_file=${secretsBlueprintFile}" \
            --ask-become-pass
    else
        $ANSIBLE_PLAYBOOK pki/playbook/pki-vault-kv-setup.yml \
            -i ${inventoryFile} \
            -e "cluster=${clusterInventory}" \
            -e "blueprint=${blueprint}" \
            -e "blueprint_file=${secretsBlueprintFile}"
    fi
}

if [ $# == 0 ]; then
    exit 3
fi

if [[ " ${1} " == *"help"* ]] || [[ " ${1} " == *"--help"* ]];then
    exit 3
else
    if [[ -z "$1" ]] || [[ -z "$2" ]]; then
        exit 3
    else
        vault-secrets-kv-setup-validate $1 $2
        vault-secrets-kv-setup-execute $1 $2
    fi
fi