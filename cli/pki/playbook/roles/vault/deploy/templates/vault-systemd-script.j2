[Unit]
Description=Vault Secret Management
Requires=network-online.target
After=network-online.target

[Service]
User={{ vault_user }}
Group={{ vault_group }}
PIDFile={{ vault_run_directory }}/vault.pid
ExecStart={{ vault_binary_directory }}/vault server -config={{ vault_config_directory }}/{{ target }}.hcl 
{%- if vault_cluster.options.log_level is defined %}
 -log-level={{ vault_cluster.options.log_level | lower }}
{% endif %}
{% set _vault_plus_one_port = member.port | int + 1 %}
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
KillSignal=SIGTERM
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target