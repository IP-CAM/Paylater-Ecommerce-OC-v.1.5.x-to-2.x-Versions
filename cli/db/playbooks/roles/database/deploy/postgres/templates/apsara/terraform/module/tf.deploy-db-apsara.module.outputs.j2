output "apsara_db_identifier" {
    value = "${var.identifier}"
}

output "apsara_db_id" {
    value = "${alicloud_db_instance.apsara_db_instance.id}"
}

output "apsara_db_port" {
    value = "${alicloud_db_instance.apsara_db_instance.port}"
}

output "apsara_db_host" {
    value = "${alicloud_db_instance.apsara_db_instance.connection_string}"
}

{% if db.apsara.db_provider_option.public_connection %}
output "apsara_db_public_host" {
    value = "${alicloud_db_connection.apsara_db_connection.connection_string}"
}

output "apsara_db_public_port" {
    value = "${alicloud_db_connection.apsara_db_connection.port}"
}

output "apsara_db_public_ip_address" {
    value = "${alicloud_db_connection.apsara_db_connection.ip_address}"
}

output "apsara_db_public_connection_id" {
    value = "${alicloud_db_connection.apsara_db_connection.id}"
}
{% endif %}

output "apsara_db_database_name" {
    value = "${var.apsara_db_instance_database_name}"
}

output "apsara_db_user" {
    value = "${var.apsara_db_instance_username}"
}
