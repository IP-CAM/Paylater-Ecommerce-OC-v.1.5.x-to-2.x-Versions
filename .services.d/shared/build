local SHARED_SCRIPTS_DIR=".services.d/shared"
source ${SHARED_SCRIPTS_DIR}/helper

echo -e "${GREEN}[BUILD]${NC} Cleaning old files... ${YELLOW}(~15 seconds)${NC}"

cd ${BUILD_DIR}
  # Delete all directory safely
  sudo rm -rf upload
  sudo rm -rf logs
  rm -f *
cd ${PROJECT_DIR}

echo -e "${GREEN}[BUILD]${NC} Copying ${SERVICE_SOURCE_DIR} to ${SERVICE_BUILD_DIR} directory... ${YELLOW}(~30 seconds)${NC}"
cp -r $SERVICE_SOURCE_DIR $SERVICE_BUILD_DIR
